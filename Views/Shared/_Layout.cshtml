<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - رستوران آزاد</title>

	<link href="~/lib/bootstrap/dist/css/bootstrap-rtl.css" rel="stylesheet" />
	@* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@

	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Restaurant.styles.css" asp-append-version="true" />

	<link rel="stylesheet" href="~/assets/vendors/themify-icons/css/themify-icons.css">
	<link rel="stylesheet" href="~/assets/vendors/animate/animate.css">
	<link rel="stylesheet" href="~/assets/css/foodhut.css">
</head>

<body dir="rtl">
	<header>
		<nav class=" navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  border-bottom fixed-top box-shadow mb-3" data-spy="affix" data-offset-top="10">
			<div class="container-fluid">
				<div class="collapse navbar-collapse row" id="navbarSupportedContent">
					<div class="col-md-4">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" asp-controller="Home" asp-action="Index">صفحه اصلی</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Home" asp-action="ReserveTable">رزرو میز</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Home" asp-action="ViewMenu">مشاهده منو</a>
							</li>
						</ul>
					</div>

					<div class="col-md-4 text-center">
						<a class="navbar-brand m-auto" asp-controller="Home" asp-action="Index">
							<img src="~/assets/imgs/Logo.webp" class="brand-img" alt="">
							<span class="brand-txt">رستوران آزاد</span>
						</a>
					</div>

					<div class="col-md-4" dir="ltr">
						<ul class="navbar-nav">
							@if (User.Identity.IsAuthenticated)
							{

								<li class="nav-item">
									<a class="nav-link" asp-controller="User" asp-action="Logout">خروج</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" asp-controller="Home" asp-action="ShowCart">سبد خرید</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" asp-controller="Home" asp-action="UserReservations">گزارش زرور ها </a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-info">@User.Identity.Name خوش آمدید</a>
								</li>
							}
							else
							{
								<li class="nav-item">
									<a class="nav-link" asp-controller="User" asp-action="Register">ثبت نام</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" asp-controller="User" asp-action="Login">ورود</a>
								</li>
							}
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</header>


	<div class="container-layout main-content">
		<div class="row">
			<div class="col-md-3" style="margin-right:0;">
				@RenderSection("DiscountBox", required: false)
			</div>

			<div class="col-md-9">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>

		</div>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container-fluid bg-dark text-light  text-center has-height-md middle-items text-center wow fadeIn">
			<div class="row">
				<div class="col-md-4">
					<h3>ایمیل ما</h3>
					<P class="text-muted">info@website.com</P>
				</div>
				<div class="col-md-4">
					<h3>تماس با ما</h3>
					<P class="text-muted">1111111</P>
				</div>
				<div class="col-md-4">
					<h3>آدرس ما</h3>
					<P class="text-muted">اینجا و آنجا</P>
				</div>
			</div>
		</div>
	</footer>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="~/assets/css/foodhut.css">
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/assets/vendors/jquery/jquery-3.4.1.js"></script>
	<script src="~/assets/vendors/bootstrap/bootstrap.bundle.js"></script>
	<script src="~/assets/vendors/bootstrap/bootstrap.affix.js"></script>
	<script src="~/assets/vendors/wow/wow.js"></script>
	<script src="~/assets/js/foodhut.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
